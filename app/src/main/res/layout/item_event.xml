<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/bg_white_rounded_bordered"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_event_image"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_event_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        tools:text="Мусор"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_event_goal"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_event_image"/>

    <TextView
        android:id="@+id/item_event_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black_shadow"
        tools:text="Волонтерство"
        app:layout_constraintTop_toBottomOf="@id/item_event_title"
        app:layout_constraintBottom_toTopOf="@+id/item_event_goal_money_total"
        app:layout_constraintStart_toEndOf="@id/item_event_image"/>

    <View
        android:id="@+id/item_event_goal_money_total"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_grey_goal"
        app:layout_constraintStart_toEndOf="@id/item_event_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_event_goal"
        app:layout_constraintBottom_toTopOf="@+id/item_event_description"/>

    <View
        android:id="@+id/item_event_goal_money_progress"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_goal_progress"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintStart_toEndOf="@id/item_event_image"
        app:layout_constraintTop_toTopOf="@id/item_event_goal_money_total"
        app:layout_constraintBottom_toBottomOf="@id/item_event_goal_money_total"/>

    <TextView
        android:id="@+id/item_event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black_phantom"
        tools:text="РАздельный сбор мусора в Санкт-Петербурге"
        app:layout_constraintTop_toBottomOf="@id/item_event_goal_money_total"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_event_image"/>

    <TextView
        android:id="@+id/item_event_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_like"
        android:drawablePadding="4dp"
        tools:text="240"
        app:layout_constraintTop_toTopOf="@id/item_event_goal"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>